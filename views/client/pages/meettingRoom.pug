doctype html
html
    head 
        link(rel="stylesheet", href="/css/styleMeet.css")
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css' integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==' crossorigin='anonymous' referrerpolicy='no-referrer')
        script(src='/socket.io/socket.io.js')       
    body
        div(class="main_wrap")
            div(class="left")
                div(class="wrap__content")
                    h4 Zoom Meeting
                    div(class="content__left")
                        include ../includes/call.includes.pug
                div(class="footer")
                    ul 
                        li(class="item"  micOn)
                            div(class="function"  )
                                i.fa-solid.fa-microphone
                                p Mở Mic 
                        li(class="item" micOff )
                            div(class="function")
                                i.fa-solid.fa-microphone-slash
                                p  Tắt Mic
                        li(class="item" )
                            div(class="function")
                                i.fa-solid.fa-record-vinyl
                                p Recording
                        li(class="item" close)
                            div(class="function" )
                                i.fa-regular.fa-message
                                p Chat
                        li(class="item")
                            div(class="function")
                                i.fa-solid.fa-desktop
                                p Share Screen
                        li(class="item")
                            div(class="function")
                                i.fa-solid.fa-person
                                p Participants
            div(class="right")
                div(class="header")
                    p All Companion
                    div(closeHeader)
                        i.fa-solid.fa-xmark
                hr
                div(class="content__right")
                    include ../includes/chat.includes.pug
                div(class="form__input")
                    form(id=User._id)
                        hr
                        input(type="text", placeholder="Ask annything about this metting" name="content")
                        div(class="tooltip" role="tooltip")
                            emoji-picker
                        Span(emojiClick)
                            i.fa-regular.fa-face-smile
                        button 
                            i.fa-solid.fa-arrow-right
    script(src="/js/helper.js") 
    script(type="module" src="/js/chat.js") 
    script(type="module" src="https://cdn.jsdelivr.net/npm/emoji-picker-element@^1/index.js") 
    script( type="module" src="/js/peer.js") 


            
                

        


        

